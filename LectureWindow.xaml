<Window x:Class="Diplom.LectureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom"
        mc:Ignorable="d"
        Title="LectureWindow" Height="450" Width="800"
           ResizeMode="NoResize"
         WindowState="Maximized"
         Background="#1D7074">
    <Grid>
        <Grid>
            <StackPanel>
                <TextBlock x:Name="textBlock" TextWrapping="Wrap" Margin="10" FontSize="30" FontWeight="Bold"/>
                <Button Background="#FFB473" Content="Next" Click="Button_Click" Margin="10" Height="50" FontSize="20" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
