        <Button Background="#FFB473" FontWeight="Bold" Content="Тест 3" HorizontalAlignment="Center" VerticalAlignment="Top" Height="81" Width="300" Margin="0,316,0,0" Click="ThirdTest_Click" FontSize="20"/>
        <Label Foreground="#FF7600" FontFamily="Broadway" Content="Тесты" HorizontalAlignment="Center" Height="54" Margin="0,10,0,0" VerticalAlignment="Top" Width="260" FontSize="36" HorizontalContentAlignment="Center" FontWeight="Bold"/>

    </Grid>
